{
	"name": "@jollywatt/zettelbuilder",
	"version": "1.0.0",
	"tasks": {
		"test": "deno test --watch --allow-read --allow-write=site/ --allow-env",
		"docs-serve": "deno run -A --watch --check docs/make.ts serve"
	},
	"exports": {
		".": "src/mod.ts",
		"./server": "src/server.ts",
		"./themes/minimal": "src/themes/minimal.tsx",
		"./themes/zetteldocs": "src/themes/zetteldocs.tsx"
	},
	"imports": {
		// "/": "./",
		"@jollywatt/zettelbuilder": "./src/mod.ts",
		"@deno/gfm": "jsr:@deno/gfm@^0.10.0",
		"@preact/preact": "npm:preact@^10.25.4",
		"@preact/render": "npm:preact-render-to-string@^6.5.12",
		"@std/assert": "jsr:@std/assert@1",
		"@std/fs": "jsr:@std/fs@^1.0.8",
		"@std/http": "jsr:@std/http@^1.0.12",
		"@std/path": "jsr:@std/path@^1.0.8",
		"@std/testing": "jsr:@std/testing@^1.0.8",
		"@types/react": "npm:@types/react@^19.0.3"
	},
	"compilerOptions": {
		"jsx": "precompile",
		"jsxImportSource": "@preact/preact",
		"jsxImportSourceTypes": "@types/react",
		"noImplicitAny": false
	},
	"fmt": {
		"useTabs": true,
		"semiColons": false,
		"exclude": ["site", "docs/src", "*.md"]
	}
}
