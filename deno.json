{
	"tasks": {
		"test": "deno test --watch --allow-read --allow-write=site/ --allow-env",
		"serve": "deno run -A npm:browser-sync start --server site/ --watch"
	},
	"imports": {
		"@deno/gfm": "jsr:@deno/gfm@^0.10.0",
		"@std/assert": "jsr:@std/assert@1",
		"@std/fs": "jsr:@std/fs@^1.0.8",
		"@std/path": "jsr:@std/path@^1.0.8",
		"@std/testing": "jsr:@std/testing@^1.0.8",
		"@types/react": "npm:@types/react@^19.0.2",
		"browser-sync": "npm:browser-sync@^3.0.3",
		"preact": "npm:preact@^10.25.3",
		"preact-render-to-string": "npm:preact-render-to-string@^6.5.12"
	},
	"compilerOptions": {
		"jsx": "precompile",
		"jsxImportSource": "preact",
		"jsxImportSourceTypes": "@types/react",
		"noImplicitAny": false
	},
	"fmt": {
		"useTabs": true,
		"semiColons": false
	}
}
